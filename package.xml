<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<package format="1" xmlns="https://wiki.freecad.org/Package_Metadata">
 <name>NordicFC</name>
 <version>1.0</version>
 <date>2025-09-20</date>
 <description>a nordic preference pack for FreeCAD</description>
 <author>Obelisk79</author>
 <maintainer email="dev@erroronline.one">error on line 1</maintainer>
 <license file="LICENSE">LGPL-2.1-or-later</license>
 <url type="repository" branch="main">https://github.com/erroronline1/NordicFC</url>
 <icon>resources/icons/nordicfc.svg</icon>

<content>
  <preferencepack>
    <name>Northern Nights</name>
    <description>A dark theme for FreeCAD based on the Nord palette</description>
    <type>Theme</type>
    <tag>dark</tag>
    <tag>nord</tag>
    <tag>nordtheme</tag>
    <subdirectory>./NordicOpenDark/</subdirectory>
    <file>NordicOpenDark.qss</file>
  </preferencepack>
  <preferencepack>
    <name>Northern Lights</name>
    <description>A light theme for FreeCAD based on the Nord palette</description>
    <type>Theme</type>
    <tag>light</tag>
    <tag>nord</tag>
    <tag>nordtheme</tag>
    <subdirectory>./NordicOpenLight/</subdirectory>
    <file>NordicOpenLight.qss</file>
  </preferencepack>
  <preferencepack>
    <name>Nordic Preferences</name>
    <description>A set of preferences to complement Nordic.</description>
    <tag>Nordic preference settings</tag>
    <subdirectory>./NordicOpenPreferences/</subdirectory>
    <file>NordicOpenPreferences.cfg</file>
  </preferencepack>
</content>
</package>
